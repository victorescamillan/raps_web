@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        @*<div>
                <h1 class="logo-name">IN+</h1>
            </div>*@
        <h3>Welcome RAPS Nutri-Pharma</h3>

        <p>Admin Login</p>
        <form class="m-t" role="form" asp-antiforgery="true" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div class="form-group">
                @*<input type="email" class="form-control" placeholder="Username" required="">*@

                <input asp-for="Username" class="form-control" placeholder="Username" value="" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<input type="password" class="form-control" placeholder="Password" required="">*@

                <input asp-for="Password" class="form-control" placeholder="Password" value="" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">Login</button>

        </form>

    </div>
</div>
@section Scripts {
    <script src="~/js/plugins/slick/slick.min.js"></script>
}
