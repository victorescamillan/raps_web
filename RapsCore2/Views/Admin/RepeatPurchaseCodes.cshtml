@model IEnumerable<RapsCore2.Models.AdminViewModel.CodesViewModel>
@{
    ViewData["Title"] = "Repeat Purchase Codes";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewData["Title"]</h2>
        <ol class="breadcrumb">
            <li>
                <a asp-area="" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
            </li>
            <li class="active">
                <strong>Codes</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#tab-1"> Available Codes</a></li>
                    <li class=""><a data-toggle="tab" href="#tab-2">Not Available Codes</a></li>
                </ul>
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane active">
                        <div class="panel-body">
                            @*<strong>Lorem ipsum dolor sit amet, consectetuer adipiscing</strong>*@

                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Product Code</th>
                                            <th>Pin Code</th>
                                            <th>Status</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.status == "Available")
                                            {
                                                <tr class="gradeU">
                                                    <td>@item.product_code</td>
                                                    <td>@item.pin_code</td>
                                                    <td>@item.status</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div id="tab-2" class="tab-pane">
                        <div class="panel-body">

                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Product Code</th>
                                            <th>Pin Code</th>
                                            <th>Status</th>
                                            <th>Member</th>
                                            @*<th></th>*@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.status == "Not Available")
                                            {
                                                <tr class="gradeU">
                                                    <td>@item.product_code</td>
                                                    <td>@item.pin_code</td>
                                                    <td>@item.status</td>
                                                    <td>@item.member</td>
                                                    @*<td id="details">
                                                        <a asp-action="MemberDetails" asp-controller="Admin" asp-route-id="@item.member_id" class="btn btn-info btn-rounded"><span class="fa fa-paste"> Details</span></a>
                                                    </td>*@
                                                </tr>
                                            }

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>

        
    </div>
</div>
@section Scripts{
    <script src="~/js/plugins/dataTables/datatables.min.js"></script>
    <!-- Page-Level Scripts -->
    <script>
        $(document).ready(function () {
            $('.dataTables-example').DataTable({
                pageLength: 10,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'PRCodes' },
                    { extend: 'pdf', title: 'PRCodes' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });
            $('#side-menu li').each(function () {
                $(this).removeClass('active');
            });
            $('#approved').addClass('active');
        });

    </script>

}

    

