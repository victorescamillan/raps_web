@model IEnumerable<RapsCore2.Models.MemberViewModel.GetPurchaseHistoryViewModel>
@{
    ViewData["Title"] = "Purchase";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <br />
        <ol class="breadcrumb">
            <li>
                <a asp-area="" asp-controller="Member" asp-action="Dashboard">Dashboard</a>
            </li>
            <li class="active">
                <strong>Purchase</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content">
  
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type </th>
                <th>Product </th>
                <th>Product Code </th>
                <th>Pin Code </th>
                <th>Qty </th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.date.ToString("MMMM dd, yyyy")</td>
                    <td>@item.purchase_type</td>
                    <td>@item.descrip</td>
                    <td>@item.product_code</td>
                    <td>@item.pin_code</td>
                    <td>@item.qty</td>
                    <td>@item.amount</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script>

        $(document).ready(function () {
            $('#side-menu li').each(function () {
                $(this).removeClass('active');
            });
            $('#purchase').addClass('active');

        });
    </script>
}
